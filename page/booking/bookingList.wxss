/* pages/booking/bookingList.wxss */

.title {
  font-family: "微软雅黑";
  font-size: 38rpx;
  padding-top: 20rpx;
}

.sub_title {
  font-family: "微软雅黑";
  font-size: 28rpx;
  color: darkgrey;
}

.content {
  padding-left: 10px;
  font-family: "微软雅黑";
  font-size: 36rpx;
  color: #1aad19;
}

.bottom {
  padding-left: 10px;
  padding-bottom: 20rpx;
  font-family: "微软雅黑";
  font-size: 28rpx;
  text-align: center;
  color: darkgrey;
}

.button-line {
  display: flex;
  padding: 20rpx 20rpx;
  border-top: 1rpx solid #eee;
  align-items: center;
  justify-content: space-between;
}

.view-button {
  border: 4rpx solid #eee;
  padding: 1rpx;
  width: 90rpx;
  align-content: center;
  align-items: center;
}

.view-button-selected {
  background: greenyellow;
  border: 4rpx solid #eee;
  padding: 1rpx;
  width: 90rpx;
  align-content: center;
  align-items: center;
}

.view-button-today {
  background-image: url('https://www.4exam.cn/images/today.png');
  background-repeat: no-repeat;
  background-position: center;
  background-size: 98% 98%;
  border: 4rpx solid #eee;
  padding: 1rpx;
  width: 90rpx;
  align-content: center;
  align-items: center;
}

.view-weekday {
  border: 0px solid blue;
  align-content: center;
  align-items: center;
  text-align: center;
}

.view-day {
  border: 0px solid #eee;
  align-content: center;
  align-items: center;
  text-align: center;
}

.text-day-count {
  color: black;
}
.text-day-count-red {
  color: red;
}

.image {
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.memo1 {
  font-size: 26rpx;
  color: #888;
  padding-top: 10rpx;
}

.text-red {
  font-size: 32rpx;
  color: red;
  padding-top: 2rpx;
}
.text-black {
  font-size: 32rpx;
  color: black;
  padding-top: 2rpx;
}